<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgReturn"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:src="@drawable/gonext" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="TextView"
            android:textColor="#e2a617"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="空腹测量:"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/sugareditText1"
            android:layout_weight="1.5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="请输入空腹测量浓度"
            app:layout_constraintBottom_toTopOf="@+id/sugareditText2"
            app:layout_constraintEnd_toEndOf="@+id/sugareditText2"
            app:layout_constraintStart_toStartOf="@+id/sugareditText2"  />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mmol/L"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="餐后2h:"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/sugareditText2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="请输入餐后2h测量浓度"
            app:layout_constraintBottom_toTopOf="@+id/sugarresult1"
            app:layout_constraintEnd_toEndOf="@+id/sugarresult1"
            app:layout_constraintStart_toStartOf="@+id/sugarresult1" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mmol/L"
            android:textSize="20sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/sugarresult1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
